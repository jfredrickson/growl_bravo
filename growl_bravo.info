name = Growl Bravo
description = A Bootstrap Sub-theme for Global Reach Out.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'
regions[column_one]     = 'Column one'
regions[column_two]     = 'Column two'
regions[column_three]   = 'Column three'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = 'css/global.css'
stylesheets[all and (min-width: 768px)][] = 'css/narrow.css'
stylesheets[all and (min-width: 992px)][] = 'css/medium.css'
stylesheets[all and (min-width: 1200px)][] = 'css/wide.css'


;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/growl_bravo.fonts.js'


;;;;;;;;;;;;;;;;;;;;;
;; Layouts
;;;;;;;;;;;;;;;;;;;;;

layouts[default][name] = 'Default'
layouts[default][description] = 'Simple one-column page'
layouts[default][template] = 'page'

layouts[landing][name] = 'Landing'
layouts[landing][description] = 'Landing page with hero area and three columns'
layouts[landing][template] = 'templates/layout-landing'
layouts[landing][regions][] = 'column_one'
layouts[landing][regions][] = 'column_two'
layouts[landing][regions][] = 'column_three'

layouts[sidebar][name] = 'Sidebar'
layouts[sidebar][description] = 'Left-hand content and right-hand sidebar'
layouts[sidebar][template] = 'templates/layout-sidebar'
